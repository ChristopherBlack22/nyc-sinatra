<h1>Update Figure</h1>
<form method="post" action="/figures/<%=@figure.id%>">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <label>Name: </label>
    <input type="text" id="figure_name" name="figure[name]" value="<%=@figure.name%>">

    <h2>Titles</h2>
    <% @titles.each do |title|%>
        <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" <%="checked" if @figure.titles.include?(title)%>><%=title.name%><br>
    <%end%>

    <h3>Create New Title</h3>
    <input type="text" id="new_title" name="title[name]">

    <h2>Landmarks</h2>
    <% @landmarks.each do |landmark|%>
        <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%="checked" if @figure.landmarks.include?(landmark)%>><%=landmark.name%><br>
    <%end%>

    <h3>Create New Landmark</h3>
    <label>Name:</label>
    <input type="text" id="new_landmark" name="landmark[name]">
    <label>Year completed:</label>
    <input type="text" id="landmark_year_completed" name="landmark[year_completed]">
    <br><br>

    <input type="submit" value="Edit Figure">

</form>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>